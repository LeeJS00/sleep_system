<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowResult">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_gravity="start"
                android:layout_marginTop="5sp"
                android:background="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5sp"
                android:text=" Results"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_gravity="start"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="30sp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/out"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/time"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/result_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="2sp"
                        android:text=" Total sleep time : 8:00 "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_gravity="left"
                        android:layout_marginTop="5sp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="2sp"
                        android:text=" Good"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/out"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/warm"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/result_tp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="2sp"
                        android:text=" AVG temperature : 18.2â„ƒ "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_gravity="left"
                        android:layout_marginTop="5sp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/text_tp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="2sp"
                        android:text=" Good"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/out"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hum"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/result_hum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="2sp"
                        android:text=" AVG humadity : 40.5% "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_gravity="left"
                        android:layout_marginTop="5sp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/text_hum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="2sp"
                        android:text=" Good"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/out"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/light"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/result_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="2sp"
                        android:text=" AVG light : 63% "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_gravity="left"
                        android:layout_marginTop="5sp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="2sp"
                        android:text=" Good"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/out"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_margin ="10sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/noisy"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/result_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="2sp"
                        android:text=" AVG sound : 37 "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_gravity="left"
                        android:layout_marginTop="5sp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/text_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="2sp"
                        android:text=" Good"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/out"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_margin ="10sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/pos_gray"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/result_pos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="2sp"
                        android:text=" Posture score : 37 "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_gravity="left"
                        android:layout_marginTop="5sp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/text_pos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="2sp"
                        android:text=" Good"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>